        border-radius: 10px;
        padding: 10px 20px;
        background-color: #f3f3f3;
    }

    .msgfield {
        width: 100%;
        height: 50vh;
        overflow-y: auto;
        margin-bottom: 30px;
        border-radius: 5px;
        background-color: #ebebeb;
        padding: 10px;
    }

    .chatsurface textarea {
        width: 100%;
        height: 70px;
        resize: none;
        outline: none;
        padding: 5px;
        border: none;
    }

    .msg {
        width: 70%;
        min-height: 40px;
        background-color: #fff;
        padding: 10px 10px 2px 10px;
        border-radius: 4px;
        margin-bottom: 10px;
    }

    .usr {
        display: none;
    }

  
